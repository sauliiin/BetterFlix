<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
        <!-- Background -->
        <control type="group">
            <animation effect="fade" start="0" end="100" time="500">WindowOpen</animation>
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture>common/black.png</texture>
            </control>
            <control type="image">
                <left>0</left>
                <top>0</top>
                <width>1920</width>
                <height>1080</height>
                <texture>$INFO[Window.Property(tikiskins.source_progress.fanart)]</texture>
                <animation effect="fade" start="0" end="75" time="300">WindowOpen</animation>
            </control>
        </control>
        <control type="image">
            <animation effect="fade" start="100" end="0" time="1000" pulse="true" condition="true">Conditional</animation>
            <width>40%</width>
            <height>400</height>
            <aspectratio>keep</aspectratio>
            <texture>$INFO[Window.Property(tikiskins.source_progress.clearlogo)]</texture>
            <visible>!String.IsEmpty(Window.Property(tikiskins.source_progress.clearlogo))</visible>
            <centerleft>50%</centerleft>
            <centertop>36%</centertop>
        </control>
        <control type="label">
            <centerleft>50%</centerleft>
            <centertop>74.3%</centertop>
            <visible>!String.IsEmpty(VideoPlayer.Season)</visible>
			<label>Temporada $INFO[VideoPlayer.Season]  •  Episódio $INFO[VideoPlayer.Episode]</label>
            <font>netS</font>
            <align>center</align>
        </control>
        <control type="textbox">
            <label>$INFO[VideoPlayer.Plot]</label>
            <centerleft>50%</centerleft>
            <centertop>69%</centertop>
            <width>915</width>
            <height>350</height>
            <font>netS</font>
            <shadowcolor>FF000000</shadowcolor> <!-- sombra preta opaca -->
            <shadowoffsetx>3</shadowoffsetx> <!-- deslocamento horizontal da sombra -->
            <shadowoffsety>3</shadowoffsety> <!-- deslocamento vertical da sombra -->
            <align>center</align> <!-- centraliza horizontalmente -->
        </control>
        <control type="group">
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="100" time="150" tween="sine" easing="in" />
                <effect type="slide" start="0,1860" end="0" time="350" center="auto" tween="quadratic" easing="out" />
            </animation>
            <top>630</top>
            <width>776</width>
            <centerleft>50%</centerleft>
            <control type="group">
                <visible>String.IsEqual(Window.Property(tikiskins.source_progress.buttons),true)</visible>
                <top>335</top>
                <control type="button" id="10">
                    <description>True Button</description>
                    <left>35</left>
                    <width>340</width>
                    <height>70</height>
                    <onleft>11</onleft>
                    <onright>11</onright>
                    <label>[B]$INFO[Window.Property(tikiskins.source_progress.true_button)][/B]</label>
                    <font>font12</font>
                    <textcolor>FFB7B4BB</textcolor>
                    <focusedcolor>dodgerblue</focusedcolor>
                    <texturefocus colordiffuse="FFCCCCCC">common/white.png</texturefocus>
                    <texturenofocus colordiffuse="FF302F2F">common/white.png</texturenofocus>
                    <align>center</align>
                </control>
                <control type="button" id="11">
                    <description>False Button</description>
                    <left>400</left>
                    <width>340</width>
                    <height>70</height>
                    <onleft>10</onleft>
                    <onright>10</onright>
                    <label>[B]$INFO[Window.Property(tikiskins.source_progress.false_button)][/B]</label>
                    <font>font12</font>
                    <textcolor>FFB7B4BB</textcolor>
                    <focusedcolor>dodgerblue</focusedcolor>
                    <texturefocus colordiffuse="FFCCCCCC">common/white.png</texturefocus>
                    <texturenofocus colordiffuse="FF302F2F">common/white.png</texturenofocus>
                    <align>center</align>
                </control>
            </control>
        </control>
    </controls>
</window>

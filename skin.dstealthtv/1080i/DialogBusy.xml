<?xml version="1.0" encoding="utf-8"?>
<window>
	<animation effect="fade" end="100" time="560">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" time="240">WindowClose</animation>
	<controls>
		<control type="group">
			<visible>String.IsEmpty(Window(Home).Property(script.cinemavision.running))</visible>
			<animation effect="fade" time="400">VisibleChange</animation>
			<visible>!Window.IsActive(startup) + !Player.Caching</visible>
			<control type="image">
				<texture>colors/black.png</texture>
				<include>FullScreenDimensions</include>
				<animation effect="fade" start="100" end="70" time="0" condition="true">Conditional</animation>
				<animation effect="fade" start="100" end="0" time="0" condition="Window.IsVisible(fullscreenvideo) | Window.IsVisible(FullscreenGame)">Conditional</animation>
			</control>
			<control type="group">
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>

				<!-- Imagem girando (rotate inverso + fade out com atraso) -->
				<control type="image">
					<id>9876</id>
					<centerleft>50%</centerleft>
					<centertop>48%</centertop>
					<width>100</width>
					<height>100</height>
					<aspectratio>keep</aspectratio>
					<texture>special://skin/gif/netflix.png</texture>
					<animation effect="rotate"
									center="auto"
									start="360" end="0"
									time="1000"
									loop="true"
									condition="true">Conditional</animation>
									<animation effect="fade" start="100" end="40" time="1000" delay="0" tween="sine" pulse="true" condition="true">Conditional</animation>
						</control>
						<control type="label" id="$PARAM[list_id]2">
							<animation effect="fade" start="100" end="0" time="1000" delay="1000" tween="sine" pulse="true" condition="true">Conditional</animation>
					<left>47%</left>
					<top>53%</top>
					<width>100%</width>
					<height>50</height>
					<font>widget_label</font>
					<shadowcolor>text_shadow</shadowcolor>
					<label>Loading ...</label>
				</control>

			</control>
		</control>
	</controls>
</window>

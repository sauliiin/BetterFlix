<?xml version="1.0" encoding="utf-8"?>
<window>
	<onload condition="!Player.PauseEnabled">SetFocus(603)</onload>
	<defaultcontrol always="true">602</defaultcontrol>
	<depth>DepthOSD</depth>
	<controls>
		<control type="button">
			<description>background close area</description>
			<left>0</left>
			<top>0</top>
			<width>100%</width>
			<bottom>280</bottom>
			<texturefocus />
			<texturenofocus />
			<onclick>Action(close)</onclick>
		</control>
		<include condition="Skin.HasSetting(touchmode)">TouchBackOSDButton</include>
		<control type="group">
			<animation type="WindowOpen" reversible="False">
				<effect type="fade" start="0" end="100" time="300"/>
			</animation>
			<animation type="WindowClose" reversible="False">
				<effect type="fade" start="100" end="0" time="350"/>
			</animation>
			<bottom>0</bottom>
			<height>180</height>
			<visible>![Window.IsVisible(SliderDialog) | Window.IsVisible(1110) | Window.IsVisible(osdaudiosettings) | Window.IsVisible(osdvideosettings) | Window.IsVisible(VideoBookmarks) | Window.IsVisible(playerprocessinfo) | Window.IsVisible(osdcmssettings) | Window.IsVisible(PVROSDChannels) | Window.IsVisible(pvrchannelguide)]</visible>
			<animation effect="fade" time="200">VisibleChange</animation>
			<control type="group" id="200">
				<animation type="WindowOpen" reversible="False">
					<effect type="fade" start="0" end="100" time="300"/>
				</animation>
				<animation type="WindowClose" reversible="False">
					<effect type="fade" start="100" end="0" time="350"/>
				</animation>
				<control type="grouplist" id="201">
					<left>125</left>
					<top>27</top>
					<width>100%</width>
					<height>135</height>
					<itemgap>10</itemgap>
					<scrolltime tween="sine">200</scrolltime>
					<orientation>horizontal</orientation>
					<onup>87</onup>
					<ondown>noop</ondown>
					<onleft>70048</onleft>
					<onright>804</onright>
					<control type="group" id="698">
						<width>76</width>
						<height>76</height>
						<visible>Player.PauseEnabled</visible>
						<control type="button" id="602">
							<left>0</left>
							<top>0</top>
							<width>52</width>
							<height>52</height>
							<label></label>
							<font></font>
							<!-- DSTV: selected n dstv/osd/button-fo. -->
							<texturefocus colordiffuse="selected">dstv/osd/button-fo.png</texturefocus>
							<texturenofocus />
							<onright>87</onright>
							<onleft>87</onleft>
							<ondown>202</ondown>
							<onup>202</onup>
							<onclick>PlayerControl(Play)</onclick>
						</control>
						<control type="image">
							<left>20</left>
							<top>10</top>
							<width>52</width>
							<height>52</height>
							<animation center="38,38" effect="zoom" end="125" reversible="false" start="85" time="480" tween="back" condition="Control.HasFocus(602)">Conditional</animation>
							<texture colordiffuse="white">$VAR[PlayerControlsPlayImageVar]</texture>
						</control>
					</control>
				</control>
				<control type="grouplist" id="202">
					<left>-120</left>
					<top>-860</top>
					<width>500</width>
					<height>135</height>
					<align>right</align>
					<itemgap>10</itemgap>
					<scrolltime tween="sine">200</scrolltime>
					<orientation>horizontal</orientation>
					<ondown>602</ondown>
					<onup>602</onup>
					<control type="radiobutton" id="804">
						<include content="OSDButton">
							<param name="texture" value="osd/fullscreen/buttons/home.png"/>
						</include>
						<onclick>PlayerControl(ShowVideoMenu)</onclick>
						<animation center="38,38" effect="zoom" end="135" reversible="false" start="80" time="500" tween="back" condition="Control.HasFocus(804)">Conditional</animation>
						<visible>VideoPlayer.HasMenu</visible>
					</control>
					<control type="radiobutton" id="70041">
						<include content="OSDButton">
							<param name="texture" value="osd/fullscreen/buttons/guide.png"/>
						</include>
						<onclick>Dialog.Close(VideoOSD)</onclick>
						<onclick>ActivateWindow(pvrchannelguide)</onclick>
						<animation center="38,38" effect="zoom" end="135" reversible="false" start="80" time="500" tween="back" condition="Control.HasFocus(70041)">Conditional</animation>
						<visible>VideoPlayer.Content(livetv) + VideoPlayer.HasEPG</visible>
					</control>
					<control type="radiobutton" id="70042">
						<include content="OSDButton">
							<param name="texture" value="osd/fullscreen/buttons/back.png"/>
						</include>
						<onclick>PlayerControl(Stop)</onclick>
						<animation center="38,38" effect="zoom" end="135" reversible="false" start="80" time="500" tween="back" condition="Control.HasFocus(70042)">Conditional</animation>
					</control>
					<control type="radiobutton" id="70043">
						<include content="OSDButton">
							<param name="texture" value="osd/fullscreen/buttons/settings-subtitle.png"/>
						</include>
						<onclick>ActivateWindow(osdsubtitlesettings)</onclick>
						<animation center="38,38" effect="zoom" end="135" reversible="false" start="80" time="500"  tween="back" condition="Control.HasFocus(70043)">Conditional</animation>
					</control>
					<control type="radiobutton" id="70046">
						<include content="OSDButton">
							<param name="texture" value="osd/fullscreen/buttons/audio.png"/>
						</include>
						<onclick>ActivateWindow(osdaudiosettings)</onclick>
						<animation center="38,38" effect="zoom" end="135" reversible="false" start="80" time="500"  tween="back" condition="Control.HasFocus(70046)">Conditional</animation>
					</control>
					<control type="radiobutton" id="70048">
						<include content="OSDButton">
							<param name="texture" value="osd/fullscreen/buttons/video.png"/>
						</include>
						<onclick>ActivateWindow(osdvideosettings)</onclick>
						<animation center="38,38" effect="zoom" end="135" reversible="false" start="80" time="500" tween="back" condition="Control.HasFocus(70048)">Conditional</animation>
					</control>
				</control>
			</control>
			<control type="group" id="6000">
				<top>60</top>
				<animation type="WindowOpen" condition="!Window.IsVisible(fullscreeninfo)" reversible="False">
					<effect type="fade" start="0" end="100" time="300"/>
					<effect type="slide" start="0,200" end="0,0" time="300" tween="cubic" easing="out" />
				</animation>
				<animation type="WindowClose" condition="!Window.IsVisible(fullscreeninfo)" reversible="False">
					<effect type="fade" start="100" end="0" time="300"/>
					<effect type="slide" start="0,0" end="0,200" time="300" tween="cubic" easing="out" />
				</animation>
				<animation type="WindowOpen" condition="Window.IsVisible(fullscreeninfo)" reversible="False">
					<effect type="fade" start="0" end="100" time="300"/>
				</animation>
				<animation type="WindowClose" condition="Window.IsVisible(fullscreeninfo)" reversible="False">
					<effect type="fade" start="100" end="0" time="300"/>
				</animation>
				<visible>Player.SeekEnabled</visible>
				<control type="button" id="87">
					<include>HiddenObject</include>
					<onup>200</onup>
					<ondown>200</ondown>
					<onleft>StepBack</onleft>
					<onright condition="!Player.Paused">StepForward</onright>
					<onright condition="Player.Paused">PlayerControl(FrameAdvance(1))</onright>
				</control>
				<control type="slider">
					<top>-22</top>
					<left>-5</left>
					<width>64</width>
					<height>64</height>
					<texturesliderbar colordiffuse="00FFFFFF">osd/progress/nub_leftright.png</texturesliderbar>
					<textureslidernib>osd/progress/nub_leftright.png</textureslidernib>
					<textureslidernibfocus colordiffuse="button_focus">osd/progress/nub_leftright.png</textureslidernibfocus>
					<info>Player.Progress</info>
					<onup>200</onup>
					<ondown>200</ondown>
					<action>seek</action>
					<visible>!Control.HasFocus(87) + !VideoPlayer.Content(LiveTV)</visible>
				</control>
				<control type="slider">
					<top>-5</top>
					<left>0</left>
					<width>100%</width>
					<height>36</height>
					<texturesliderbar colordiffuse="00FFFFFF">osd/progress/nub_leftright.png</texturesliderbar>
					<textureslidernib colordiffuse="button_focus">osd/progress/nub_leftright.png</textureslidernib>
					<textureslidernibfocus colordiffuse="button_focus">osd/progress/nub_leftright.png</textureslidernibfocus>
					<info>Player.Progress</info>
					<onup>200</onup>
					<ondown>200</ondown>
					<action>seek</action>
					<visible>Control.HasFocus(87) + !VideoPlayer.Content(LiveTV)</visible>
				</control>
				<control type="slider">
					<top>-5</top>
					<left>0</left>
					<width>100%</width>
					<height>36</height>
					<texturesliderbar colordiffuse="00FFFFFF">osd/progress/nub_leftright.png</texturesliderbar>
					<textureslidernib>osd/progress/nub_leftright.png</textureslidernib>
					<textureslidernibfocus colordiffuse="button_focus">osd/progress/nub_leftright.png</textureslidernibfocus>
					<info>PVR.TimeshiftProgressPlayPos</info>
					<onup>200</onup>
					<ondown>200</ondown>
					<action>pvr.seek</action>
					<visible>!Control.HasFocus(87) + VideoPlayer.Content(LiveTV)</visible>
				</control>
				<control type="slider">
					<top>-5</top>
					<left>0</left>
					<width>100%</width>
					<height>36</height>
					<texturesliderbar colordiffuse="00FFFFFF">osd/progress/nub_leftright.png</texturesliderbar>
					<textureslidernib colordiffuse="button_focus">osd/progress/nub_leftright.png</textureslidernib>
					<textureslidernibfocus colordiffuse="button_focus">osd/progress/nub_leftright.png</textureslidernibfocus>
					<info>PVR.TimeshiftProgressPlayPos</info>
					<onup>200</onup>
					<ondown>200</ondown>
					<action>pvr.seek</action>
					<visible>Control.HasFocus(87) + VideoPlayer.Content(LiveTV)</visible>
				</control>
			</control>
		</control>
	</controls>
</window>
